{
  "name": "@thetinyspark/texture-packer",
  "version": "1.11.0",
  "description": "A cli texture packer for your video games",
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "pub": "npm run build && npm publish",
    "start": "npm run build && npm run texture:packer",
    "build": "tsc && npm run code:packer",
    "texture:packer": "node dist/main.js --dir \"./assets/\" --output ./tmp --size 1024 --optimize 1 --debug 0",
    "code:packer": "npx webpack --config webpack.config.js",
    "test": "jasmine-ts \"test/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thetinyspark/texture-packer.git"
  },
  "keywords": [
    "texture",
    "packer",
    "video",
    "games",
    "spritesheet"
  ],
  "author": "The Tiny Spark",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thetinyspark/texture-packer/issues"
  },
  "homepage": "https://github.com/thetinyspark/texture-packer#readme",
  "dependencies": {
    "@thetinyspark/coffe-maker": "^1.3.3",
    "@thetinyspark/moocaccino-barista": "^1.9.3",
    "@types/commander": "^2.12.2",
    "canvas": "^2.9.3",
    "commander": "^8.2.0",
    "update": "^0.7.4"
  },
  "devDependencies": {
    "@types/jasmine": "^3.9.1",
    "@types/node": "^16.10.5",
    "concurrently": "^6.2.0",
    "jasmine": "^3.8.0",
    "jasmine-core": "^3.8.0",
    "jasmine-ts": "^0.4.0",
    "nodemon": "^2.0.12",
    "ts-node": "^10.3.0",
    "typedoc": "^0.21.4",
    "typedoc-theme-dark": "0.0.5",
    "typescript": "^4.3.5",
    "webpack": "^5.47.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  },
  "bin": {
    "texture-packer": "./dist/index.js"
  }
}
